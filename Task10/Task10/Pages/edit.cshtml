@using Task10.Models;
@{ 
    UserAuthentification auth = new UserAuthentification();

    string userName = User.Identity.Name;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <title></title>
</head>
<body style="background-color: bisque">

    @if (auth.HasRole(userName, "Admin"))
    {
        <div class="container" style="margin-top: 5%">
            <div class="alert alert-primary" role="alert" style="text-align: center">
                What do you want to edit?
            </div>

            <button type="button" class="btn btn-secondary btn-lg btn-block" name="watch_list" onClick='location.href="edit_name.cshtml"'>
                1. Edit a user's name
            </button>

            <button type="button" class="btn btn-secondary btn-lg btn-block" onClick='location.href="edit_birth.cshtml"'>
                2. Edit a user's birthdate
            </button>
        </div>
    }
    else
    {
        <div class="alert alert-danger" role="alert">
            You are not allowed to see this page!
        </div>
    }


</body>
</html>