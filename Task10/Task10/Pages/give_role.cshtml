@using Task10.Models;
@{
    string name = null, role = null;

    UserAuthentification auth = new UserAuthentification();

    if (IsPost)
    {
        name = Request["name"];
        role = Request["role"];
        auth.GiveRole(name, role);
    }

}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Give user</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>

    @if (User.IsInRole("Admin"))
    {
        <form action="give_role.cshtml" method="post">

            <div style="margin: 20px">
                <label for="input_name">Enter name:</label>
                <input type="text" name="name" id="input_name" placeholder="Enter name" value=@name />
            </div>

            <div style="margin: 20px">
                <label for="input_birth">Enter role: </label>
                <input type="text" name="role" id="input_name" placeholder="Enter role" value=@role />
            </div>
            <button class="btn btn-primary" style="width:200px">Give</button>
        </form>
    }
    else
    {
        <div class="alert alert-danger" role="alert">
            You are not allowed to see this page!
        </div>
    }

    <button type="button" button class="btn btn-primary" style="width:200px; margin-top: 10px" onClick='location.href="../index.cshtml"'>
        Return to the main page
    </button>

</body>
</html>